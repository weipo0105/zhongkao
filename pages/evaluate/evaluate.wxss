/* pages/evaluate/evaluate.wxss */
.show{
  display: block;
}
.hide{
  display: none;
}
.eval-header{
  background: #000000;
  width: 100%;
  height: 50rpx;
  color: #fff;
  font-size: 32rpx;
  display: flex;
  flex: row;
  justify-content: space-around;
}
.ceping-img{
  display: flex;
  flex: row;
  width: 566rpx;
  height: 40rpx;
}
.ceping-img image{
  width: 40rpx;
  height: 40rpx;
}
.ceping-img text{
  display: block;
  padding-left: 15rpx;
  color: #fff;
}
.tlflogo{
  margin-left: 15rpx;
  width: 40rpx;
  height: 40rpx;
}
.tlflogo image{
  margin-left: 15rpx;
  width: 40rpx;
  height: 40rpx;
}

/* header-bar */
.header-bar{
  width: 100%;
  height: 240rpx;
  background: #212633;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}
.header-bar-item{
  width: 150rpx;
  height: 150rpx;
  /* background: #4bdc95; */
  margin-top: 25rpx;
  text-align: center;
  font-size: 32rpx;
  color: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.item-num{
  width:95rpx;
  height:60rpx;
  border-radius: 10rpx;
  line-height: 60rpx;
  
}
.done{
  background:#4bdc95;
  color: #fff;
}
.notdone{
  background:#ffffff;
  color: #333333;
}
.item-text{
  width: 125rpx;
  height: 80rpx;
  text-align: center;
  margin-top: 25rpx;
}
.row{
  display: flex;
  flex-direction: row;
}
.colomn{
  display: flex;
  flex-direction: column;
}
.bg-black{
  background: #333333;
  color: #fff;
}
.bg-white{
  background: #eeeeee;
  color: #333333;
}
.sex{
  width: 50%;
}
.age{
   width: 50%; 
}
.sex-age{
  justify-content: space-around;
}
