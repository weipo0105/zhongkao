.report-container{
  
}
/* commom */
.row{
  display: flex;
  flex-direction: row;
}
.column{
  display: flex;
  flex-direction: column;
}
.level-dashed{
  border: 1rpx dashed #1db4f5;
}
.level-middle{
  justify-content: center;
}
.vertical-middle{
  align-items: center;
}
/* header */
.header{
  width: 100%;
  height: 120rpx;
  background: #000000;
  color: #3dcc22;
  font-size: 32rpx;
  padding-left: 20rpx;
  text-align: left;
  line-height: 150rpx;
  
}
.userinfo{
  width: 100%;
  height: 180rpx;
  background: #212633;
  font-size: 32rpx;
  color: #fff;
  align-items: center;
  justify-content: space-around;
  border-bottom: 1rpx dashed #1db4f5;
}
.name{
  font-size: 50rpx;
  font-weight: bold;
  color: #4bdc95;
}
.userinfo-detail{
  padding-top: 10rpx;
  padding-left: 30rpx;
}
.share{
  width:230rpx;
  height:85rpx;
  background:#56c33c;
  border-radius:10rpx;
  font-size: 32rpx;
  color: #fff;
  justify-content: space-around;
  align-items: center;
  padding-left: 10rpx;
  padding-right: 10rpx;
}
.share image{
  width:60rpx;
  height:60rpx;
}

.score-evaluate{
  width: 100%;
  height: 500rpx;
  background: #212633;
  color: #fff;
  border-bottom: 1rpx dashed #1db4f5;
  text-align: center;
}
.score-view-header{
  justify-content: space-between;
}
.score-header{
  width: 30%;
  height: 70rpx;
  line-height: 70rpx;
  text-align: left;
  margin-left: 80rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #38b720;
}
.date-header{
  width: 40%;
  height: 70rpx;
  line-height: 70rpx;
  text-align: left;
  padding-left: 121rpx; 
  font-size: 27rpx;
  color: #fff;
}

/* 表格 */
.table{
  width: 50%;
  height: 380rpx;
  /* border: 1rpx solid #fff; */
  line-height: 73rpx;
  padding-left: 13rpx;
  
}
.tr,.th{
  width: 100%;
  height: 73rpx;
  /* border: 1rpx solid #fff; */
  font-size: 28rpx;

}
.td{
  width: 33.3%;
  height: 73rpx;
  /* border: 1rpx solid #fff; */
  color: #fff;
}
.td1{
  width: 50%;
}
.td2{
  width: 25%;
}
.td3{
  width: 25%;
}
.text-left{
  text-align: left;
}
.th-style{
  color: #49d491;
  font-weight: bold;
}
/* score-chart */
.chart{
  width: 50%;
  height: 380rpx;
  color: #fff;
  /* border: 1rpx solid #fff; */
  justify-content: center;
  align-items: center;
}

.chart image{
  width: 200rpx;
  height: 200rpx;
}
.chart text{
  margin-top: 55rpx;
  color: #fff;
}
.body-evaluate{
  width: 100%;
  height: 540rpx;
  background: #333333;
  color: #fff;
  border-bottom: 1rpx dashed #1db4f5;
  text-align: center;
}
.advice{
  width: 100%;
  height: 520rpx;
  background: #212633;
  color: #fff;
  border-bottom: 1rpx dashed #1db4f5;
  text-align: center;
}
.video{
  width: 100%;
  height: 770rpx;
  background: #333333;
  color: #fff;
  border-bottom: 1rpx dashed #1db4f5;
  text-align: center;
}

