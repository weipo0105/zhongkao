/* pages/video-detail/video-detail.wxss */
/* common */
.row{
  display: flex;
  flex-direction: row;
}
.column{
  display: flex;
  flex-direction: column;
}
.level-center{
  display: flex;
  flex-direction: row;
  justify-content: center;
}
.vertical-center{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.level-vertical-center{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

/* 视频详情  */
.video-detail-container{
  display: flex;
  flex-direction: column;
  background: #efefef;
   /* width: 100%; 
  height: 1000rpx; */
}
.video-detail-container video{
  width: 100%;
  height: 427rpx;
}
.video-info-view{
  width: 100%;
  height: 100%;
  background: #f5f5f5;
  display: flex;
  flex-direction: column;
  /* justify-content: center; */
}
.video-info-title-view{
  width: 100%;
  height: 120rpx;
  background: #efefef;  
}
.video-info-title{
  width: 85%;
  height: 60rpx;
  margin-top: 20rpx; 
  margin-left: 30rpx;
  padding-left: 20rpx;
  border-left: 10rpx solid #63bd4c;
  
}
.video-info-playdata{
  display: flex;
  justify-content: space-between;
  width: 85%;
  height: 55rpx;
  padding-left: 2rpx;
  padding-right: 2rpx;
  
   /* background: red;   */
   padding-bottom: 40rpx;
  border-bottom: 4rpx solid #dddddd;
}

.teacher-info{
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.teacher-info-header{
  width: 85%;
  height: 55rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-self: center;
  padding-top: 20rpx;
  font-size: 38rpx;
  /* background: red; */
}
.teacher-info-title{
  
}
/* 收起/展开图标的控制 */
.show-hide{
  display: flex;
  flex-direction: row; 
  /* justify-content: center; */
  align-items: flex-end;
  padding-bottom: 3rpx;
}
.show-hide image{
  width:50rpx;
  height:40rpx;
  margin-right:18rpx;
}


.teacher-info-detail image{
  width: 235rpx;
  height: 240rpx;
}
.teacher-info-detail{
  align-self: center;
}
.teacher-info-detail text{
  margin-top: 15rpx;
}
.teacher-info-intro{
  width: 90%;
  height: 150rpx;
  color: #999999;
  align-self: center;
  padding-left: 15rpx;
  font-size: 32rpx;
  border-bottom: 4rpx solid #dddddd;
}

/* 相关视频部分 */
.video-relative{
  background: #f5f5f5;
  width: 100%;
  height: 100%;
  margin-top: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.video-relative-cate{
  width: 90%;
  height: 100rpx;
  /* background: red;  */
  border-bottom: 4rpx solid #dddddd;
  line-height: 100rpx;
  font-size: 38rpx;
  font-weight: bold;
}
.video-relative-item{
  width: 90%;
  height: 200rpx;
  /* background: purple;  */
  border-bottom: 4rpx solid #dddddd;
  display: flex;
  flex-direction: row;

}
.video-relative-item-thumb{
  width: 35%;
  height: 200rpx;
  /* background: blue;  */
  display: flex;
  align-items: center;
}
.video-relative-item-thumb image{
  width:236rpx;
  height:160rpx;
  border-radius: 10rpx;
}
.video-relative-item-title{
  width: 45%;
  height: 200rpx;
  /* background: yellow;  */
  
}
.video-relative-item-title view{
  padding-top: 20rpx; 
  padding-left: 20rpx;
  font-size: 30rpx;
}
.video-relative-item-intro{
  width: 20%;
  height: 200rpx;
}
.video-relative-item-intro view{
  padding-bottom: 10rpx;
  display: flex;
  flex-direction: row;
  font-size: 28rpx;
}
.video-relative-item-intro image{
  width:35rpx;
  height:25rpx;
  margin-right:18rpx;
}