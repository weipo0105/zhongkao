/**index.wxss**/
.container{
  width: 100%;
  height: 100%;
  background: #15161d;
}
.swwiper{
  width: 100%;
  height: 450rpx;
}
.swiper-item{
  width: 100%;
  height: 450rpx;
}
.nav-container{
  display: flex;
  flex-direction: row;
  background: #15161d;
  height: 100rpx;
  justify-content: space-around;
}
.nav-item{
  display: flex;
  flex-direction: row;
}
.point{
  color: #46c98a;
  font-size: 69rpx;
}
.nav-title{
  color: #fff;
  font-size: 25rpx;
  line-height: 100rpx;
  margin-left: 10rpx;
}
.intro-container{
  width: 100%;
  /* height: 500rpx; */
  display: flex;
  flex-direction: column;
  text-align: center;
  background: #212633;
  /* padding: 0 15rpx; */
}
.intro-item{
  width: 100%;
  height: 65rpx;
  margin-top: 20rpx;
  margin-bottom: 30rpx;
}
.intro-item image{
  width: 50rpx;
  height: 50rpx;
}
.intro-title{
  width: 100%;
  height: 65rpx;
  font-size: 38rpx;
  font-weight: bold;
  color: #fff;
}
.intro-text{
  width: 90%;
  height: 135rpx;
  font-size: 26rpx;
  color: #fff;
  text-align: center;
  align-self: center;
}
.delimiter-level{
  border: 1rpx solid #636770;
}
.intro2-container{
  width: 100%;
  height: 300rpx;
  background: #4bdc95;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
}
.intro2-item{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
}
.intro2-item image{
  width: 50rpx;
  height: 50rpx;
}
.item-num{
  font-size: 42rpx;
  color: #fff;
  margin-top: 15rpx;
}
.item-text{
  font-size: 32rpx;
  color: #fff;
  margin-top: 15rpx;
}
.intro3 image{
  width: 100%;
  height: 450rpx;
}