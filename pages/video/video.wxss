/* pages/video/video.wxss */
page{
    background: #212633;
}
.video-container{
  width: 100%;
  height: 100%;
  color: #fff;

}
.video-info{
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 80rpx;
  background: #15161d;
  justify-content: space-around;
  font-size: 32rpx;
  line-height: 80rpx;
}
.video-info-item{
  color: #4bdc95;
}
.video-data{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  margin-top: 50rpx;
  margin-bottom: 50rpx;
}

.video-img{
  width: 100rpx;
  height: 100rpx;
  margin-left: 30rpx; 
}
.video-title-learn{
  width: 60%;
  height: 100rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  margin-left: 30rpx;
  margin-top: 40rpx;
}
.video-title{
  font-size: 32rpx;
}
.video-learnNum{
  font-size: 22rpx;
}
.arrow-right{
  width: 50rpx;
  height: 50rpx;
}
.delimiter-level{
  border: 1rpx solid #4bdc95;
}

/* 搜索框 */
.search-bar {
    box-sizing: border-box;
    /* position: fixed;
    top: 40;
    left: 0;
    z-index: 999; */
    width: 100%;
    height: 100rpx;
    padding:10rpx;
    background-color: #15161d;
    text-align: center;
    box-shadow: 0 10rpx 60rpx rgba(0, 0, 0, .3);
}

.search-txt {
    font-size: 30rpx;
    display: inline-block;
    width: 730rpx;
    height: 80rpx;
    background-color: #fff;
    background-image: url(data:image/png;base64,);
    background-position: 20rpx center;
    background-repeat: no-repeat;
    background-size: 50rpx;
    border-radius: 8rpx;
}

.search-txt-plc {
    color: #bfbfbf;
}